<div class="user-new">
  <div class="form user-form">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <p>必須</p>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名" %>
      </div>

      <div class="field">
        <p>必須</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
      </div>

      <div class="field">
        <p>必須</p>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
      </div>

      <div class="field">
        <p>必須</p>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード確認"  %>
      </div>

      <ul class="actions">
        <li><%= f.submit "新しいアカウントを作成" %></li>
        <li><%= link_to "既にアカウントをお持ちの方はログイン", new_user_session_path %></li>
      </ul>
    <% end %>
  </div>
</div>
