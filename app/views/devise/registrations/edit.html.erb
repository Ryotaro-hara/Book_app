<div class="user-edit">
  <h2>プロフィールを編集</h2>

  <div class="user-edit-view">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="edit-content">
        <div class="image-row">
          <%= f.label :image, "アイコン画像",class:"label" %><br>
          <%= f.file_field :image %>
        </div>
      </div>

      <div class="edit-content">
        <div class="row">
          <%= f.label :name, "名前",class:"label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名" %>
        </div>
      </div>

      <div class="edit-content">
        <div class="row">
          <%= f.label :email, "メールアドレス",class:"label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
        </div>
      </div>

      <div class="edit-content">
        <div class="row">
          <%= f.label :introduction, "自己紹介",class:"label" %>
          <%= f.text_area :introduction, autofocus: true, placeholder:"自己紹介" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="edit-content">
        <div class="row">
          <%= f.label :password, "新規パスワード" %><i>(変更しない場合は空欄)</i>
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
        </div>
      </div>

      <div class="edit-content">
        <div class="row">
          <%= f.label :password_confirmation, "確認用パスワード" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"確認用パスワード" %>
        </div>
      </div>

    <div class="edit-submit">
      <%= f.submit "更新する" ,class:"edit-submit-btn" %>
    </div>
  <% end %>

    <div class="destroy-submit">
      <%= button_to "※ アカウントを削除する", registration_path(resource_name), data: { confirm: "このアカウントを削除しますか?" }, method: :delete, class:"destroy-submit-btn" %>
    </div>
  </div>
</div>