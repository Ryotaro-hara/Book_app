<div class="form user-form">
  <h2>ログイン</h2>

  <div class="login_error">
    <%= alert %>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <p>必須</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
    </div>

    <div class="field">
      <p>必須</p>
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード" %>
    </div>


    <ul class="actions">
      <li><%= f.submit "ログイン" %></li>
      <li><%= link_to "新しいアカウントを作成", new_user_registration_path %></li>
    </ul>
  <% end %>
</div>

