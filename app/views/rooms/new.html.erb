<div class="room-new">
    <h3>
        <%= link_to "基本情報", new_room_path ,class:"room-new-about" %>
    </h3>
    <div class="room-view">
    <%= render "shared/error", obj: @room %>
    <%= form_with model: @room, local: true do |f| %>
        <div class="new-content">
            <div class="row">
                <h4>ルーム情報<h4>
            </div>
        </div>
        <div class="new-content">
            <div class="row">
                <%= f.label :room_name, "ルーム名", class: "label" %><br>
                <%= f.text_field :room_name, placeholder:"ルーム名を入力", class: "input" %>
            </div>        
        </div>
        <div class="new-content">
            <div class="row">
                <%= f.label :introduction, "ルーム紹介", class: "label" %><br>
                <%= f.text_area :introduction, placeholder:"ルームの内容", class: "textarea" %>
            </div>        
        </div>
        <div class="new-content">
            <div class="row">
                <%= f.label :price, "料金", class: "label" %><br>
                <%= f.number_field :price, placeholder:"１日あたりの料金を入力", class: "input" %>
            </div>        
        </div>
        <div class="new-content">
            <div class="row">
                <%= f.label :address, "住所", class: "label" %><br>
                <%= f.text_field :address, placeholder:"住所を入力", class: "input" %>
            </div>        
        </div>
        <div class="new-content">
            <div class="row">
                <%= f.label :image, "ルーム画像", class: "label" %><br>
                <%= f.file_field :image %>
            </div>        
        </div>

        <div class="room-submit">
            <%= f.submit "登録", class: "submit-btn" %>
        </div>
        
    <% end %>
    </div>
</div>